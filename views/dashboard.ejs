<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BYTEBISTRO</title>
    <link rel="stylesheet" href="../css/table.css">
    <link rel="stylesheet" href="../css/styles.css">
</head>
<body>
    <div class="container">
        <%- include('_nav') %>
        <main class="content">
            <h1>Dashboard</h1>
            <p>Welcome to BYTEBISTRO</p>
            <hr class="divider">

            <!-- Activity Log Table -->
            <section class="activity-log">
                <h2>Activity Logs</h2>
                <div class="table-container">
                    <table id="logTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Timestamp</th>
                                <th>Panel</th>
                                <th>Action</th>
                                <th>Manager</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Logs here -->
                            <% data.forEach(d => { %>
                                <tr>
                                    <td><%= d.id %></td>
                                    <td><%= d.timestamp %></td>
                                    <td><%= d.panel %></td>
                                    <td><%= d.action %></td>
                                    <td><%= d.manager %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </section>            
        </main>
    </div>
</body>
</html>
