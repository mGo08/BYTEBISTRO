<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="/css/action.css">
</head>
<body>
    <div class="container">
        <%- include('_nav') %>
        <main class="content">
            <h1>Add Menu Item</h1>
            <hr class="divider">

            <form id="addMenuForm"> 
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="category_id">Category:</label>
                        <select id="category_id" name="category_id" required>
                            <option value="">Select Category</option>
                            <% categories.forEach(d => { %>
                                <option value="<%= d.id %>"><%= d.name %></option>
                            <% }); %>
                        </select>
                        <a href="/menu/add/category">New Category</a>
                    </div>
                </div>
            
                <div class="form-row">
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="number" id="price" name="price" required>
                    </div>
                </div>

                <hr class="divider">

                <div class="item-group">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="inventory_item_id">Ingredient:</label>
                            <select id="inventory_item_id" name="inventory_item_id" required>
                                <option value="">Select Item</option>
                                <% ingredients.forEach(d => { %>
                                    <option value="<%= d.id %>"><%= d.name %> (<%= d.cost %>)</option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                
                    <div class="form-row">
                        <div class="form-group">
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" required>
                        </div>
                        <div class="form-group">
                            <label for="unit_id">Unit:</label>
                            <select id="unit_id" name="unit_id" required>
                                <option value="">Select Unit</option>
                                <% units.forEach(d => { %>
                                    <option value="<%= d.id %>"><%= d.name %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="cost">Cost:</label>
                            <input type="number" id="cost" name="cost" required>
                        </div>
                    </div>

                    <hr class="divider">
                </div>

                <div id="itemGroupsContainer"></div>
                <button id="addItemBtn" type="button">Add Ingredient</button>
            
                <hr class="divider">
            
                <div class="form-group">
                    <label for="action">Action:</label>
                    <textarea id="action" name="action" rows="4" cols="50" placeholder="Description..." required></textarea>
                </div>
                
                <button id="addbtn" type="submit">Add Menu Item</button>
            </form>
        </main>
    </div>

    <script src="/js/cloneitemgroup.js"></script>
    <script src="/js/menu_add.js"></script>
</body>
</html>
