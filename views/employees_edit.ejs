<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employees</title>
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <%- include('_nav') %>
        <main class="content">
            <h1>Edit Employee</h1>
            <hr class="divider">

            <form id="editEmployeeForm" method="post" action="/employees/edit/<%= id %>"> 
                <div>
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" name="first_name" value="<%= data.first_name %>" required>
                </div>
                <div>
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" name="last_name" value="<%= data.last_name %>" required>
                </div>
                <div>
                    <label for="salary">Salary:</label>
                    <input type="number" id="salary" name="salary" value="<%= data.salary %>" required>
                </div>
                <div>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= data.email %>" required>
                </div>
                <div>
                    <label for="role">Role:</label>
                    <select id="role" name="role_id" required>
                        <option value="">Select Role</option>
                        <% roles.forEach(r => { %>
                            <option value=<%= r.id %> <%= r.id === data.role_id ? 'selected' : '' %>><%= r.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div>
                    <label for="schedule">Schedule:</label>
                    <select id="schedule" name="schedule_id" required>
                        <option value="">Select Schedule</option>
                        <% schedules.forEach(s => { %>
                            <option value=<%= s.id %> <%= s.id === data.schedule_id ? 'selected' : '' %>><%= s.name %></option>
                        <% }); %>
                    </select>
                </div>

                <hr class="divider">

                <div>
                    <label for="action">Action:</label>
                    <textarea id="action" name="action" rows="4" cols="50" placeholder="Short description of the changes you've made..." required></textarea>
                </div>
                <button type="submit">Edit Employee</button>
            </form>
        </main>
    </div>
</body>
</html>
