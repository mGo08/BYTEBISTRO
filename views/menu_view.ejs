<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="/css/action.css">
</head>
<body>
    <div class="container">
        <%- include('_nav') %>
        <main class="content">
            <h1>View Menu Item</h1>
            <hr class="divider">

            <table id="supplyTable">
                <thead>
                    <tr>
                        <th>Ingredient</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th>Cost</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(d => { %>
                        <tr>
                            <td><%= d.ingredient %></td>
                            <td><%= d.quantity %></td>
                            <td><%= d.unit %></td>
                            <td><%= d.cost %></td>
                            <td><%= d.subtotal %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </main>
    </div>
</body>
</html>
