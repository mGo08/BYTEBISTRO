<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employees</title>
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <%- include('_nav') %>
        <main class="content">
            <h1>Delete Employee</h1>
            <hr class="divider">

            <table id="employeeTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Schedule</th>
                        <th>Salary</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(d => { %>
                        <tr>
                            <td><%= d.id %></td>
                            <td><%= d.name %></td>
                            <td><%= d.role %></td>
                            <td><%= d.schedule %></td>
                            <td><%= d.salary %></td>
                            <td><%= d.email %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <form id="deleteEmployeeForm" method="post" action="/employees/delete/<%= id %>"> 
                <div>
                    <label for="action">Action:</label>
                    <textarea id="action" name="action" rows="4" cols="50" placeholder="Short description of the changes you've made..." required></textarea>
                </div>
                <button type="submit">Delete Employee</button>
            </form>
        </main>
    </div>
</body>
</html>
