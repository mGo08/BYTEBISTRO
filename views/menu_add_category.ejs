<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="/css/action.css">
</head>
<body>
    <div class="container">
        <%- include('_nav') %>
        <main class="content">
            <h1>Add Menu Category</h1>
            <hr class="divider">

            <table id="unitTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(d => { %>
                        <tr>
                            <td><%= d.id %></td>
                            <td><%= d.name %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <hr class="divider">

            <form id="addCategoryForm" method="post" action="/menu/add/category"> 
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                </div>
            
                <hr class="divider">
            
                <div class="form-group">
                    <label for="action">Action:</label>
                    <textarea id="action" name="action" rows="4" cols="50" placeholder="Description..." required></textarea>
                </div>
                
                <button id="addbtn" type="submit">Add Category</button>
            </form>
        </main>
    </div>
</body>
</html>
